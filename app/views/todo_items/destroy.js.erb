$('#notice').finish();
<% if @todo_item %>
  $('#todo_<%= @todo_item.id %>').css("text-decoration", "line-through");
  $('#todo_<%= @todo_item.id %>').fadeOut(1000, function() {
    $('#todo_<%= @todo_item.id %>').remove();
  });
<% else %>
  window.location.href = "/";
<% end %>
$('#notice').html('<%= flash[:notice] %>');
//$('#notice').html('the todo was successfully deleted');
$('#notice').fadeOut(4000, function() {
  $('#notice').html('');
  $('#notice').show();
});
