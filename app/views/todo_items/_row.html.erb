      <tr class="todo-item" id="todo_<%= todo_item.id %>">
        <td><%= button_to [:toggle_complete, todo_item], class: 'complete-toggle .toggle', remote: true do %>
          <%= todo_item.is_complete %>
        <% end %></td>
        <td class="label"><%= todo_item.title %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item), remote: true %></td>
        <td><%= link_to 'Delete', todo_item, method: :delete,
            data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>

